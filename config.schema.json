{
  "pluginAlias": "wled",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "items": {
          "title": "WLED Devices",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "WLED"
            },
            "ip": {
              "title": "WLED IP-Address/Hostname",
              "type": "string",
              "required": true,
              "format": "hostname"
            },
            "effects": {
              "title": "Effects (Numeric) you want to use (upto 45) comma separated",
              "type": "string",
              "required": true,
              "pattern": "^[\\d*,?]*$"
            }
          }
        }
      }
    }
  }
}
